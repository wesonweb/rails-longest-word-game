<h1>The longest word game</h1>
<h2>Your letters: </h2>
<p><%= @letters.join(" ") %></p>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label for="word" class="form-label row mt-3">What is the longest word you can find</label>
    <div class="col-12 d-flex">
      <input type="text" class="form-control flex-grow" name="word" value="<%= params[:word]%>" placeholder="type your word here" autofocus>
      <input type="submit" value="Play" class="btn btn-primary mt-2">
    </div>
  </form>
